
<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :text %>
    <%= f.association :user, selected: current_user.id, html: { id: "user-association" } %>
  </div>

  <div class="form-actions d-flex">
    <%= f.button :submit, class: "btn btn-primary my-1" %>
    <%= link_to 'Back', posts_path, class: "btn btn-secondary m-1" %>
  </div>
<% end %>
