<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Posts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Text</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td class="p-2"><%= post.title %></td>
          <td class="p-2"><%= post.text %></td>
          <td class="p-2"><%= post.user_id %></td>
          <td class="p-2"><%= link_to 'Show', post %></td>
          <td class="p-2"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="p-2"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Post', new_post_path %>
</div>
